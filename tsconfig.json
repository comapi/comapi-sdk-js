{
    "compileOnSave": false,
    "files": [
        "build/src/*.ts"
    ],
    "compilerOptions": {
        "lib": [
            "es6",
            "dom"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "target": "es5",
        "sourceMap": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "types": [
            "jasmine",
            "reflect-metadata"
        ]
    },
    "exclude": [
        "node_modules",
        "typings",
        "build",
        "dist"
    ]
}